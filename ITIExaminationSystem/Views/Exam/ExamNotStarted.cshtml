@{
    ViewData["Title"] = "Exam Not Started";
}

<div style="display: flex; justify-content: center; align-items: center; min-height: 80vh;">
    <div style="text-align: center; max-width: 500px; padding: 40px; background: white; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <div style="font-size: 72px; margin-bottom: 20px;">🕐</div>
        <h1 style="color: #f59e0b; margin-bottom: 16px;">Exam Not Started Yet</h1>
        <p style="color: #64748b; font-size: 18px; margin-bottom: 24px;">
            @if (TempData["ErrorMessage"] != null)
            {
                @TempData["ErrorMessage"]
            }
            else
            {
                <text>This exam has not started yet. Please come back at the scheduled time.</text>
            }
        </p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary" style="padding: 12px 24px; background: #3b82f6; color: white; text-decoration: none; border-radius: 8px; display: inline-block;">
            Return to Dashboard
        </a>
    </div>
</div>