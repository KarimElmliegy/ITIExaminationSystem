        async function deleteTrack(trackId, trackName) {
            // Show confirmation dialog
            if (!confirm(`Are you sure you want to delete track "${trackName}"?\nThis will also remove all course assignments from this track.`)) {
                return;
            }

            try {
                // Show loading state (optional)
                const deleteBtn = event?.target;
                const originalText = deleteBtn?.innerHTML;
                if (deleteBtn) {
                    deleteBtn.innerHTML = 'Deleting...';
                    deleteBtn.disabled = true;
                }

                // Make the API call
                const response = await fetch(`/BranchManager/DeleteTrack?trackId=${trackId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                const result = await response.json();

                // Restore button state
                if (deleteBtn) {
                    deleteBtn.innerHTML = originalText;
                    deleteBtn.disabled = false;
                }

                if (result.success) {
                    alert('✅ Track deleted successfully');

                    // Remove the row from the table without reloading
                    const row = document.querySelector(`tr[data-track-id="${trackId}"]`);
                    if (row) {
                        row.remove();

                        // Refresh the carousel
                        const tabName = 'tracks';
                        const tableBody = document.getElementById(`${tabName}TableBody`);
                        if (tableBody) {
                            const rows = Array.from(tableBody.querySelectorAll('tr.carousel-row'));
                            carouselState[tabName].rows = rows;
                            renderCarouselPage(tabName, carouselState[tabName].currentPage);
                        }
                    } else {
                        // If row not found, just reload the page
                        window.location.reload();
                    }
                } else {
                    alert('❌ Error: ' + (result.message || 'Could not delete track'));
                }
            } catch (err) {
                console.error('🔥 Error deleting track:', err);
                alert('❌ Error deleting track: ' + err.message);

                // Restore button state if error
                const deleteBtn = event?.target;
                if (deleteBtn) {
                    deleteBtn.innerHTML = 'Delete';
                    deleteBtn.disabled = false;
                }
            }
        }
