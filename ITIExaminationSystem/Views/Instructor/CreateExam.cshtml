            </form>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal-overlay hidden">
        <div class="modal-box delete-confirm-modal">
            <div class="warning-icon">⚠️</div>
            <h3>Delete Exam</h3>
            <p>
                Are you sure you want to delete this exam?<br>
                <span id="deleteExamName" style="color: #ef4444; font-weight: 600;"></span>
            </p>
            <p style="color: rgba(255, 255, 255, 0.5); font-size: 0.9rem;">
                This action cannot be undone. All exam data including questions and student answers will be permanently deleted.
            </p>

            <div class="delete-actions">
                <button type="button" class="btn-cancel" onclick="closeDeleteModal()">Cancel</button>
                <form id="deleteForm" method="post" action="/Instructor/DeleteExam" style="display: inline;">
                    <input type="hidden" id="deleteExamId" name="examId" value="" />
                    <button type="submit" class="btn-delete-confirm">Delete Exam</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Modal Functions
        let currentExamId = null;
        let isEditMode = false;

        function openAddExamModal() {
            const modal = document.getElementById('examModal');
            const modalTitle = document.getElementById('modalTitle');
            const form = document.getElementById('examForm');
            const submitBtn = document.getElementById('modalSubmitBtn');

            modalTitle.textContent = 'Create New Exam';
            form.reset();
            form.action = '/Instructor/CreateExam';
            document.getElementById('examId').value = '0';
            submitBtn.textContent = 'Create Exam';
            isEditMode = false;

            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('examDate').min = today;

            modal.classList.remove('hidden');
        }

        function openEditExamModal(examId) {
            const modal = document.getElementById('examModal');
            const modalTitle = document.getElementById('modalTitle');
            const form = document.getElementById('examForm');
            const submitBtn = document.getElementById('modalSubmitBtn');

            modalTitle.textContent = 'Edit Exam';
            form.action = '/Instructor/UpdateExam';
            document.getElementById('examId').value = examId;
            submitBtn.textContent = 'Update Exam';
            isEditMode = true;
            currentExamId = examId;

            // TODO: Fetch exam data from server and populate form
            // For now, we'll just open the modal
            // You should make an AJAX call to get exam data and populate the form

            modal.classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('examModal').classList.add('hidden');
            currentExamId = null;
            isEditMode = false;
        }

        // View Exam Details
        function viewExam(examId) {
            // You can implement a detailed view modal here
            alert('Viewing exam details for ID: ' + examId);
            // Or redirect to a detailed view page
            // window.location.href = '/Instructor/ViewExam/' + examId;
        }

        // Delete Confirmation
        function showDeleteConfirm(examId, examName) {
            document.getElementById('deleteExamName').textContent = examName;
            document.getElementById('deleteExamId').value = examId;
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }

        // Form validation
        document.getElementById('examForm').addEventListener('submit', function(e) {
            const date = document.getElementById('examDate').value;
            const time = document.getElementById('examTime').value;
            const duration = document.getElementById('duration').value;
            const fullMarks = document.getElementById('fullMarks').value;

            if (!date || !time || !duration || !fullMarks) {
                e.preventDefault();
                alert('Please fill in all required fields.');
                return;
            }

            // Validate date is not in the past
            const examDateTime = new Date(date + ' ' + time);
            if (examDateTime < new Date() && !isEditMode) {
                e.preventDefault();
                alert('Exam date and time must be in the future.');
                return;
            }
        });

        // Close modal when clicking outside
        document.addEventListener('click', function(e) {
            const modal = document.getElementById('examModal');
            const deleteModal = document.getElementById('deleteModal');

            if (e.target === modal) {
                closeModal();
            }
            if (e.target === deleteModal) {
                closeDeleteModal();
            }
        });

        // Handle keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
                closeDeleteModal();
            }
        });

        // Auto-calculate total marks based on question types
             function calculateTotals() {
            const mcqCount = parseInt(document.getElementById('mcqCount').value) || 0;
            const mcqMarks = parseInt(document.getElementById('mcqMarks').value) || 0;
            const tfCount = parseInt(document.getElementById('trueFalseCount').value) || 0;
            const tfMarks = parseInt(document.getElementById('trueFalseMarks').value) || 0;

            // ✅ Total Questions
            const totalQuestions = mcqCount + tfCount;
            document.getElementById('questionCount').value = totalQuestions;

            // ✅ Total Marks
            const totalMarks = (mcqCount * mcqMarks) + (tfCount * tfMarks);
            if (totalMarks > 0) {
                document.getElementById('fullMarks').value = totalMarks;
            }
        }


        // Add event listeners for auto-calculation
                document.getElementById('mcqCount').addEventListener('input', calculateTotals);
        document.getElementById('mcqMarks').addEventListener('input', calculateTotals);
        document.getElementById('trueFalseCount').addEventListener('input', calculateTotals);
        document.getElementById('trueFalseMarks').addEventListener('input', calculateTotals);

        // Initialize with today's date and current time + 1 hour
        window.onload = function() {
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);

            document.getElementById('examDate').value = tomorrow.toISOString().split('T')[0];

            // Set time to next hour
            const nextHour = new Date(today);
            nextHour.setHours(nextHour.getHours() + 1);
            nextHour.setMinutes(0);
            document.getElementById('examTime').value = nextHour.toTimeString().slice(0, 5);
        };
    </script>

