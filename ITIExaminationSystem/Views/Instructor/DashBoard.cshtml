@{
    Layout = null;
}
@model List<Student>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ITI Instructor - Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <script src="https://unpkg.com/lucide@latest"></script>
    <link rel="icon" type="image/png" href="~/images/Gemini_Generated_Image_vi5243vi5243vi52.png">
    <link rel="stylesheet" href="/css/Instructor.css">
</head>
<body>
    <div id="dashboard-view">
        <header class="admin-header">
            <div class="header-left">
                <div class="nav-logo-box"></div>
                <span class="header-title">Admin Portal</span>
            </div>
            <nav class="nav-links">
                <a href="/Instructor/Students" class="nav-link active">Students</a>
                <a href="/Instructor/Courses" class="nav-link">Courses</a>
                <a href="/Instructor/Exams" class="nav-link">Exams</a>
            </nav>

            <a href="/Home/Login"  id="logoutBtn" class="nav-link logout-btn">Logout</a>

            
        </header>

        <main class="main-content">
            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">👨‍🎓</div>
                    <div class="stat-info">
                        <h3>Total Students</h3>
                        <p id="stat-students">@Model.Count()</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">👨‍🏫</div>
                    <div class="stat-info">
                        <h3>Instructors</h3>
                        <p id="stat-instructors">1</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">📚</div>
                    <div class="stat-info">
                        <h3>Active Courses</h3>
                        <p id="stat-courses">1</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">📝</div>
                    <div class="stat-info">
                        <h3>Exams Scheduled</h3>
                        <p>1</p>
                    </div>
                </div>
            </div>

            <!-- STUDENTS TAB -->
            <div id="tab-students" class="content-tab">
                <div class="data-panel">
                    <div class="panel-header">
                        <h2 class="panel-title">👨‍🎓 Student Management</h2>
                        <button class="btn-add" onclick="openModal('student')">
                            + Add Student
                        </button>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Branch</th>
                                <th>Track</th>
                                <th class="select">
                                    <div class="roller">
                                        <button type="button" class="roller-btn" data-step="1">▲</button>

                                        <span id="rollerValue">@(ViewBag.SelectedIntake ?? 46)</span>

                                        <button type="button" class="roller-btn" data-step="-1">▼</button>

                                        <!-- Hidden real select (for form submit) -->
                                        <select name="Intake" id="intake" hidden>
                                            @for (int i = 46; i > 0; i--)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                    </div>
                                </th>

                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model)
                            {
                                <tr>
                                    <td>@s.UserId</td>
                                    <td style="font-weight: 600; color: #667eea">@s?.User?.UserName</td>
                                    <td>@s?.User?.UserEmail</td>
                                    <td>@s.BranchId</td>
                                    <td><span class="badge badge-purple">@s?.TrackId</span></td>
                                    <td>@s.IntakeNumber</td>
                                    <td>
                                        <button class="action-btn btn-edit"
                                                onclick="openEditStudentModal('@s?.UserId', '@s?.User?.UserName', '@s?.User?.UserEmail', '@s?.BranchId', '@s?.TrackId', '@s?.IntakeNumber')">
                                            Edit
                                        </button>
                                        <button class="action-btn btn-delete" onclick="openDeleteModal(@s.UserId)">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </main>
    </div>

    <div id="modal-overlay" class="modal-overlay hidden">
        <!-- STUDENT MODAL (ADD) -->
        <div id="modal-student" class="modal-box hidden">
            <h2 class="modal-title">Add New Student</h2>
            <form asp-action="AddStudent" asp-controller="Instructor" method="post">
                <div id="step-1">
                    <div class="form-group">
                        <label>Student Name</label>
                        <input type="text" id="inp-stud-name" name="FullName" class="form-input" required placeholder="e.g. Ahmed Ali" />
                    </div>
                    <div class="form-group">
                        <label>Branch</label>
                        <input type="text" id="inp-stud-branch" name="Branch" class="form-input" required placeholder="e.g. Smart Village" />
                    </div>
                    <div class="form-group">
                        <label>Track</label>
                        <input type="text" id="inp-stud-track" name="Track" class="form-input" required placeholder="e.g. .NET Full Stack" />
                    </div>
                    <div class="form-group">
                        <label>Intake</label>
                        <input type="number" id="inp-stud-intake" name="Intake" class="form-input" required min="1" placeholder="e.g. 44" />
                    </div>
                    <div class="modal-actions">
                        <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                        <button type="button" class="btn-next action-btn" style="background: #4f46e5; color: white;" onclick="showStep2()">Next: Login Info →</button>
                    </div>
                </div>
                <div id="step-2" class="hidden">
                    <div class="banner-info">
                        ℹ️ Set the login credentials for this student.
                    </div>
                    <div class="form-group">
                        <label>Email (Username)</label>
                        <input type="email" id="inp-stud-email" name="Email" class="form-input" required placeholder="student@iti.gov.eg" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="Password" class="form-input" required placeholder="******" />
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" name="ConfirmPassword" class="form-input" required placeholder="******" />
                    </div>
                    <div class="modal-actions">
                        <button type="button" class="btn-cancel" onclick="showStep1()">← Back</button>
                        <button type="submit" class="btn-add">Create Account</button>
                    </div>
                </div>
            </form>
        </div>

        <!-- INSTRUCTOR MODAL (ADD) -->
        <div id="modal-instructor" class="modal-box hidden">
            <h2 class="modal-title">Add New Instructor</h2>
            <form onsubmit="handleAddInstructor(event)">
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" id="inp-inst-name" class="form-input" required placeholder="e.g. Dr. Sara Hassan" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="inp-inst-email" class="form-input" required placeholder="email@iti.gov.eg" />
                </div>
                <div class="form-group">
                    <label>Specialization</label>
                    <input type="text" id="inp-inst-spec" class="form-input" required placeholder="e.g. Data Science" />
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn-add">Save Instructor</button>
                </div>
            </form>
        </div>

        <div id="modal-course" class="modal-box hidden">
            <h2 class="modal-title">Add New Course</h2>
            <form onsubmit="handleAddCourse(event)">
                <div class="form-group">
                    <label>Course Name</label>
                    <input type="text" id="inp-course-name" class="form-input" required placeholder="e.g. Web Development" />
                </div>
                <div class="form-group">
                    <label>Instructor Name</label>
                    <input type="text" id="inp-course-inst" class="form-input" required placeholder="e.g. Dr. Mohamed" />
                </div>
                <div class="form-group">
                    <label>Duration</label>
                    <input type="text" id="inp-course-dur" class="form-input" required placeholder="e.g. 10 Weeks" />
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn-add">Save Course</button>
                </div>
            </form>
        </div>

        <!-- ⭐ EDIT STUDENT MODAL ⭐ -->
        <div id="modal-edit-student" class="modal-box hidden">
            <h2 class="modal-title">Edit Student</h2>
            <form asp-action="UpdateStudent" asp-controller="Instructor" method="post">
                <input type="hidden" id="edit-stud-id" name="UserId" />

                <div class="form-group">
                    <label>Student Name</label>
                    <input type="text" id="edit-stud-name" name="FullName" class="form-input" required placeholder="e.g. Ahmed Ali" />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="edit-stud-email" name="Email" class="form-input" required placeholder="student@iti.gov.eg" />
                </div>

                <div class="form-group">
                    <label>Branch</label>
                    <input type="text" id="edit-stud-branch" name="Branch" class="form-input" required placeholder="e.g. Smart Village" />
                </div>

                <div class="form-group">
                    <label>Track</label>
                    <input type="text" id="edit-stud-track" name="Track" class="form-input" required placeholder="e.g. .NET Full Stack" />
                </div>

                <div class="form-group">
                    <label>Intake</label>
                    <input type="number" id="edit-stud-intake" name="Intake" class="form-input" required min="1" placeholder="e.g. 44" />
                </div>

                <div class="modal-actions">
                    <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn-add">Update Student</button>
                </div>
            </form>
        </div>

        <!-- EDIT INSTRUCTOR MODAL -->
        <div id="modal-edit-instructor" class="modal-box hidden">
            <h2 class="modal-title">Edit Instructor</h2>
            <form asp-action="UpdateInstructor" asp-controller="Instructor" method="post">
                <input type="hidden" id="edit-inst-id" name="UserId" />

                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" id="edit-inst-name" name="FullName" class="form-input" required placeholder="e.g. Dr. Sara Hassan" />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="edit-inst-email" name="Email" class="form-input" required placeholder="email@iti.gov.eg" />
                </div>

                <div class="form-group">
                    <label>Specialization</label>
                    <input type="text" id="edit-inst-spec" name="Specialization" class="form-input" required placeholder="e.g. Data Science" />
                </div>

                <div class="modal-actions">
                    <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn-add">Update Instructor</button>
                </div>
            </form>
        </div>

        <!-- EDIT COURSE MODAL -->
        <div id="modal-edit-course" class="modal-box hidden">
            <h2 class="modal-title">Edit Course</h2>
            <form asp-action="UpdateCourse" asp-controller="Instructor" method="post">
                <input type="hidden" id="edit-course-id" name="CourseId" />

                <div class="form-group">
                    <label>Course Name</label>
                    <input type="text" id="edit-course-name" name="CourseName" class="form-input" required placeholder="e.g. Web Development" />
                </div>

                <div class="form-group">
                    <label>Instructor Name</label>
                    <input type="text" id="edit-course-inst" name="InstructorName" class="form-input" required placeholder="e.g. Dr. Mohamed" />
                </div>

                <div class="form-group">
                    <label>Duration</label>
                    <input type="text" id="edit-course-dur" name="Duration" class="form-input" required placeholder="e.g. 10 Weeks" />
                </div>

                <div class="form-group">
                    <label>Status</label>
                    <select id="edit-course-status" name="Status" class="form-input" required>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>

                <div class="modal-actions">
                    <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn-add">Update Course</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/script.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const btnStudents = document.getElementById('btn-students');
            if (btnStudents) {
                 switchTab('Students', btnStudents);
            }
        });</script>

</body>

</html>
