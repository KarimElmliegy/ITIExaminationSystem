@{
    Layout = null;
}
@model List<Course>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ITI Instructor - Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <script src="https://unpkg.com/lucide@latest"></script>
    <link rel="icon" type="image/png" href="/images/Gemini_Generated_Image_vi5243vi5243vi52.png">
    <link rel="stylesheet" href="/css/Instructor.css">
    
</head>
<body>
    <div id="dashboard-view">
        <header class="admin-header">
            <div class="header-left">
                <div class="nav-logo-box"></div>
                <span class="header-title">Admin Portal</span>
            </div>
            <nav class="nav-links">
                <a style="text-decoration: none;" href="/Instructor/insDiplayStudents" class="nav-link ">Students</a>
                <a style="text-decoration: none;" href="/Instructor/Courses" class="nav-link">Courses</a>
                <a style="text-decoration: none;" href="/Instructor/Exams" class="nav-link">Exams</a>
            </nav>

            <a style="text-decoration: none;" href="/Home/Login" id="logoutBtn" class="nav-link logout-btn">Logout</a>


        </header>

        <main class="main-content">
            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">👨‍🎓</div>
                    <div class="stat-info">
                        <h3>Total Students</h3>
                        <p id="stat-students">@ViewBag.StudentCount</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">👨‍🏫</div>
                    <div class="stat-info">
                        <h3>Instructors</h3>
                        <p id="stat-instructors">@ViewBag.instractors</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">📚</div>
                    <div class="stat-info">
                        <h3>Active Courses</h3>
                        <p id="stat-courses">@ViewBag.CourseCount</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">📝</div>
                    <div class="stat-info">
                        <h3>Exams Scheduled</h3>
                        <p>1</p>
                    </div>
                </div>
            </div>



            <!-- COURSES TAB -->
            <div id="tab-courses" >
                <div class="data-panel">
                    <div class="panel-header">
                        <h2 class="panel-title">📚 Course Management</h2>
                        <button class="btn-add" onclick="openModal('course')">
                            + Add Course
                        </button>
                    </div>
                    <table id="table-courses">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Course Name</th>
                                <th>Instructor</th>
                                <th>Email</th>
                                <th>Duration
</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowNumber = 1;
                            }
                            @foreach (var course in Model)
                            {
                                <tr>
                             

                                    <!-- Course ID -->
                                    <td>@course.CourseId</td>

                                    <!-- Course Name -->
                                    <td style="font-weight: 600; color: #667eea">
                                        @course.CourseName
                                    </td>

                                    <!-- Instructor Names -->
                                    <td>
                                            @(course.Teaches?.FirstOrDefault()?.Instructor?.User?.UserName ?? "No Instructor")
                                    </td>

                                    <!-- Instructor Emails -->
                                    <td>
                                        @if (course.Teaches != null && course.Teaches.Any())
                                        {
                                            // Get the first item safely
                                            var firstTeach = course.Teaches.FirstOrDefault();

                                            // Display it
                                            <div>@firstTeach?.Instructor?.User?.UserEmail</div>
                                        }
                                        else
                                        {
                                            <span style="color:#999;">-</span>
                                        }
                                    </td>

                                    <!-- Tries Limit -->
                                    <td>
                                        <span class="badge badge-purple">@course.Duration</span>
                                    </td>

                                    <!-- Actions -->
                                    <td>
                                        <button class="action-btn btn-edit"
                                                data-course-id="@course.CourseId"
                                                data-course-name="@course.CourseName"
                                                data-inst-name="@(course.Teaches?.FirstOrDefault()?.Instructor?.User?.UserName ?? "No Instructor")"
                                                data-inst-email="@(course.Teaches?.FirstOrDefault()?.Instructor?.User?.UserEmail ?? "")"
                                                data-duration="@course.Duration">
                                            Edit
                                        </button>

                                        <button class="action-btn btn-delete"
                                                data-course-id="@course.CourseId"
                                                data-course-name="@course.CourseName">
                                            Delete
                                        </button>


                                    </td>
                                </tr>
                                rowNumber++;
                            }
                        </tbody>
                    </table>
                        </div>
                    </div>

              
                </div>
            </div>

        </main>
    </div>

    <div id="modal-overlay" class="modal-overlay hidden">


        <div id="modal-course" class="modal-box hidden">
            <h2 class="modal-title">Add New Course</h2>

            <form onsubmit="handleAddCourse(event)">

                <input type="hidden" id="inp-course-id" />

                <div class="form-group">
                    <label>Course Name</label>
                    <input type="text"
                           id="inp-course-name"
                           class="form-input"
                           required />
                </div>

                <div class="form-group">
                    <label>Instructor Name</label>
                    <input type="text"
                           id="inp-course-inst"
                           class="form-input"
                           required />
                </div>

                <div class="form-group">
                    <label>Instructor Email</label>
                    <input type="email"
                           id="inp-course-email"
                           class="form-input"
                           required />
                </div>

                <div class="form-group">
                    <label>Duration</label>
                    <input type="text"
                           id="inp-course-dur"
                           class="form-input"
                           required />
                </div>

                <div class="modal-actions">
                    <button type="button"
                            class="btn-cancel"
                            onclick="closeModal()">
                        Cancel
                    </button>

                    <button type="submit"
                            class="btn-add">
                        Save Course
                    </button>
                </div>
            </form>
        </div>

    
        <!-- EDIT COURSE MODAL -->
        <div id="modal-edit-course" class="modal-box hidden">
            <h2 class="modal-title">Edit Course</h2>
            <form asp-action="UpdateCourse" asp-controller="Instructor" method="post">
                <input type="hidden" id="edit-course-id" name="CourseId" />

                <input type="hidden" id="inp-course-id" />
                <div class="form-group">
                    <label>Course Name</label>
                    <input type="text" id="edit-course-name" name="CourseName" class="form-input" required placeholder="e.g. Web Development" />
                </div>

                <div class="form-group">
                    <label>Instructor Name</label>
                    <input type="text" id="edit-course-inst" name="InstructorName" class="form-input" required placeholder="e.g. Dr. Mohamed" />
                </div>

                <div class="form-group">
                    <label>Duration</label>
                    <input type="text" id="edit-course-dur" name="Duration" class="form-input" required placeholder="e.g. 10 Weeks" />
                </div>

                <div class="form-group">
                    <label>Status</label>
                    <select id="edit-course-status" name="Status" class="form-input" required>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>

                <div class="modal-actions">
                    <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn-add">Update Course</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/Instructor.js"></script>
    <script>
            document.addEventListener("DOMContentLoaded", function () {
            // 1. Initialize the Roller
            setupIntakeRoller();

            // 2. Existing Tab Logic (if you are using it)
            const btnStudents = document.getElementById('btn-students');
            if (btnStudents) {
                 switchTab('Students', btnStudents);
            }
        });
        </script>

</body>

</html>
